<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />


<div id="map"></div>
<p id="lat"><%= lat %></p>
<p id="long"><%= long %></p>
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<script>
    // مختصات جغرافیایی مورد نظر را تعیین کنید (مثال: تهران)
    var latitude = Number(document.getElementById("lat").innerHTML);
    var longitude = Number(document.getElementById("long").innerHTML);

    // نقشه را ایجاد کنید و در دیوی با id "map" نمایش دهید
    var map = L.map('map').setView([latitude, longitude], 13);

    // یک تایل مپ از OpenStreetMap را به نقشه اضافه کنید
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // یک نشانگر با مختصات داده شده روی نقشه اضافه کنید
    L.marker([latitude, longitude]).addTo(map);
</script>
