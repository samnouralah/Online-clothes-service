<link rel="stylesheet" href="/css/product.css">
<div class="product">
    <% if(products.length > 0) {%>
    <% for(let product of products) {%>
    <div class="box-product">
        <img src="/uploads/<%= product.image %>" alt="">
        <h3><%= product.name %></h3>
        <span >قیمت اتو : <%= product.ironPrice %></span>
        <span>قیمت شست و شو : <%= product.washingPrice %></span>
        <div>
            <a href="/dashbord/product/delete/<%= product.id %>">حذف محصول</a>
        </div>
    </div>
    <% } %>
    <% }else {%>
        <center><h1>هیچ محصولی نساخته اید</h1></center>
    <% } %>
</div>